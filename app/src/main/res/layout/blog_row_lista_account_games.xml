<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.subinkrishna.widget.CircularImageView
            android:id="@+id/rolLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"


            android:src="@mipmap/ic_history_black_24dp"
            android:layout_alignParentLeft="true"
            android:elevation="5dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"

            android:paddingLeft="16dp"

            android:scaleType="centerCrop"

            />







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rolLogo"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/rolLogo"
            android:paddingLeft="20dp"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/nombreJuego"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Whatch Dogs 2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plataformaJuego"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Ps4"
                android:textSize="13sp" />





        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>