<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jesus.waiapp.AccountActivity">


    <ImageView
        android:id="@+id/fondoPerfilRent"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@mipmap/fondo"
        android:elevation="5dp"
        android:scaleType="centerCrop"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#f8f8f8"
        android:orientation="horizontal">

        <com.subinkrishna.widget.CircularImageView
            android:id="@+id/fotoPerfilRent"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:src="@mipmap/fotoperfil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/nombreUsuarioProfileRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:paddingBottom="6dp"
                android:text="Jesús Manuel Jiménez"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/numeroJuegosAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="5 juegos"
                android:textSize="13sp"

                />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:numStars="5"
                android:paddingTop="6dp"


                />


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#dedcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:weightSum="2"

        >

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Juegos"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Valoraciones"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/ChatButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:text="CHAT"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
